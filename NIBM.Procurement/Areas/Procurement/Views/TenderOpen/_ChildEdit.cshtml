
@model NIBM.Procurement.Areas.Procurement.Models.TenderVendorVM

@{ Html.RenderPartial("~/Areas/Base/Views/Shared/_PartialAlert.cshtml"); }
@using (Html.BeginForm())
{
    <br />

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TenderID)
        @Html.HiddenFor(model => model.TenderVendorID)

        <div class="form-group row">
            @Html.LabelFor(model => model.VendorID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.PopUpSelectorFor(model => model.VendorID, "Base", "Data", "GetVendors", new { @class = "form-control form-control-sm rounded-pill" }, "Please select a Vendor", dspFormat: "{1} - {2}", hiddenIndices: "0")
                @Html.ValidationMessageFor(model => model.VendorID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div style="text-align:right;">
            <p>
                <div class="d-grid gap-2 d-md-block">
                    <input type="submit" value="Save" class="btn btn-primary" style="min-width:75px" />
                    <input type="button" value="Cancel" class="btn btn-secondary" style="min-width:75px" />
                </div>
            </p>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

