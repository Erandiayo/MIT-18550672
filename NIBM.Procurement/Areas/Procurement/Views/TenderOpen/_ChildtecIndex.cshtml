@model IEnumerable<NIBM.Procurement.Areas.Procurement.Models.TecMemberVM>

<br />
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DesignationDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BranchDesc)
            </th>
            @{
                if (ViewBag.IsToEdit)
                {
                    <th class="btn-1" style="width:120px">
                        @Html.NoEncodeActionLink("<span class='fa fa-plus' style='color:white'></span>", "Add", "ChildTecCreate", routeValues: new { TenderID = ViewBag.TenderId }, htmlAttributes: new { data_popup_editor = "", @class = "btn btn-primary pull-right btn-sm", data_title = "Add TEC Member", data_popup_width = "450" })
                    </th>
                }
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DesignationDesc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BranchDesc)
                </td>
                @{
                    if (ViewBag.IsToEdit)
                    {
                        <td class="btn-2">
                            <div class="d-grid gap-2 d-md-block pull-right">
                                @using (Html.BeginForm("ChildtecDelete", "TenderOpen", new { id = item.TECMemberID }))
                                {
                                    @Html.ConfirmSubmitButton("<span class='bi bi-trash'></span>", "Are you sure you want to delete?", "Confirm TEC Member deletion", "<span class='bi bi-trash'></span> Delete", new { data_popup_delete = "", @class = "btn btn-danger btn-sm" })
                                }
                            </div>
                        </td>
                    }
                }
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.IsToEdit)
{

    Html.RenderPartial("~/Areas/Base/Views/Shared/_PartialAlert.cshtml");
}
