@using NIBM.Procurement
@model NIBM.Procurement.Areas.Procurement.Models.VendorVM

@{
    ViewBag.Title = "Vendor Details";
}

<div class="form-horizontal">
    <div class="form-group row">
        <br />
        @using (Html.BeginForm("Delete", "Vendor"))
        {
            @Html.HiddenFor(model => model.VendorID)
            @Html.HiddenFor(model => model.RowVersion)

            <div class="card shadow">
                <div class="card-header py-3">
                    <div class="d-grid gap-2 d-md-block justify-content-evenly">
                        @Html.ActionLink("Edit", "Edit", new { id = Model.VendorID }, new { @class = "btn btn-primary", style = "min-width:75px; margin-right:0.5%;" })
                        @Html.ConfirmSubmitButton("Delete", "Are you sure you want to delete?", "Confirm Vendar Deletion",
                        "<span class='bi bi-trash'></span> Delete", new { @class = "btn btn-danger", style = "min-width:75px;margin-right:0.5%;" })

                        @Html.NoEncodeLabel("<span class='bi bi-circle-fill " + ((Model.Status) == NIBM.Procurement.ActiveState.Active ? "green-status" : "blood-red-status") + "'>"
                        + "  " + Model.Status.ToEnumChar() + "</span>", "", htmlAttributes: new { @class = "float-right" })
                    </div>
                </div>
                <div class="card-body px-5 pb-5">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.DetailsViewFor(model => model.Name)
                            </div>
                            @Html.LabelFor(model => model.NavVendorID, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.DetailsViewFor(model => model.NavVendorID)
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.TelNo, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.DetailsViewFor(model => model.TelNo)
                            </div>
                            @Html.LabelFor(model => model.FaxNo, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.DetailsViewFor(model => model.FaxNo)
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.DetailsViewFor(model => model.Status)
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.DetailsViewFor(model => model.Address)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div>
    <br /><br />
    @Html.ActionLink("Back to Index", "Index")
</div>

