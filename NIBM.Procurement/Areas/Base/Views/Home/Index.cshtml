@using NIBM.Procurement.Common
@using System.Linq
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Login Page</title>
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/fontawesome")
    <link href="~/Content/Login/bootstrap.4.1.3.min.css" rel="stylesheet" />
    @*<link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;400&display=swap" rel="stylesheet">*@
    <link href="~/Content/Login/login.css" rel="stylesheet" />
    <!--Please Change the Background as required-->

</head>
<body>
    <div class="container d-flex flex-column justify-content-center align-items-center h-100">
        @using (Html.BeginForm())
        {
            <div class="row">
                <div class="col-md-12">

                    <form>

                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-6 px-0 login-section-wrapper">
                                    <div style="position: relative; width: 92%; height:80%">
                                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="padding-top:0px;">
                                            <div class="carousel-inner">
                                                <div class="carousel-item active">
                                                    <img class="d-block w-100" src="~/Content/Images/login_slide1.png" alt="First slide">
                                                </div>
                                                <div class="carousel-item">
                                                    <img class="d-block w-100" src="~/Content/Images/login_slide2.png" alt="Second slide">
                                                </div>
                                                <div class="carousel-item">
                                                    <img class="d-block w-100" src="~/Content/Images/login_slide3.png" alt="Third slide">
                                                </div>
                                                <div class="carousel-item">
                                                    <img class="d-block w-100" src="~/Content/Images/login_slide4.png" alt="Third slide">
                                                </div>
                                                <div class="carousel-item">
                                                    <img class="d-block w-100" src="~/Content/Images/login_slide5.png" alt="Third slide">
                                                </div>
                                                <div class="carousel-item">
                                                    <img class="d-block w-100" src="~/Content/Images/login_slide6.png" alt="Third slide">
                                                </div>
                                            </div>
                                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                <span class="sr-only">Previous</span>
                                            </a>
                                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                <span class="sr-only">Next</span>
                                            </a>
                                        </div>
                                    </div>
                                    <div style="position: relative; width: 92%; height:20%">
                                        <img src="~/Content/Images/circuitoLogo10.png" style="position: absolute;top: 20px; left: 10px; width: 320px;" class="img-fluid" />
                                    </div>

                                </div>
                                <div class="col-md-6 login-section-wrapper">
                                    <div class="row h-100">
                                        <div style="width:100%;text-align:center;">
                                            <div style="margin-top:50px;">
                                                <img src="~/Content/Images/nibm.png" style="position: center; width: 250px;" class="img-fluid" />
                                            </div>
                                            <h4 style="margin-top: 50px;margin-bottom: 0">The authenticated user</h4>
                                            <h4 style="margin: 0">"@ViewBag.Emai"</h4>
                                            <h4 style="margin-bottom: 50px">does not have access to the system.</h4>
                                            <h5>Please contact the support team.</h5>
                                            <p>Or, continue with the classic login</p>
                                            <div><a class="btn btn-warning" href="@Url.Action("SignIn", "Home", new { area = "Base" })">Continue With Classic Login</a></div>
                                            <p style="color:#2d438b; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-weight:bold;margin-top:50px">Powered by SDU, SOCE - NIBM</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        }
    </div>

    <script>
        $(document).ready(function () {
            $('.carousel').carousel({
                interval: 2000
            })
        });
        $(document).on('click', '.close', function () {
            $(this).parent().toggleClass("d-none");
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
</body>
</html>
